---
import '../components/GlobalStyles.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { SITE_DESCRIPTION, SITE_NAME } from '../consts';
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={SITE_DESCRIPTION} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | {SITE_NAME}</title>
  </head>
  <body class="bg-gray-500 text-gray-100">
    <header class="bg-gray-100 text-gray-500">
      <h1 class="text-center py-6">
        <a href="/">{SITE_NAME}</a>
      </h1>
      <Navbar />
    </header>
    <main class="container max-w-4xl min-h-[calc(100vh-170px)] mx-auto px-6">
      <slot />
    </main>
    <Footer />
  </body>
</html>
