---
interface Props {
  title: string;
  school: string;
  type: string;
  year: Array<number>;
}

const { title, school, type, year } = Astro.props;
---

<div class="card">
  <p class="text-gray-300">{school}</p>
  <h3>{title}</h3>
  <div class="flex gap-1.5 mt-1 items-center">
    <div class="bg-blue-500/50 whitespace-nowrap rounded-full px-3 py-1 text-sm text-center">{type}</div>
    <div>{year.sort().join(', ')}</div>
  </div>
</div>
