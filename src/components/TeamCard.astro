---
import LinkButton from './LinkButton.astro';

interface Props {
  name: string;
  role: string;
  description?: string;
  website: URL;
}

const { name, role, description, website } = Astro.props;
---

<div class="flex flex-col sm:flex-row space-x-0 sm:space-x-6">
  <img alt={name} src="/yuhao-ba.jpg" class="h-40 w-40 min-w-40 aspect-square rounded-full" />
  <div>
    <h3 class="font-bold">{name}</h3>
    <p class="text-sm text-gray-300">{role}</p>
    {description && <p class="my-4">{description}</p>}
    <LinkButton label="Website" link={website} opensNewTab={true} />
  </div>
</div>
