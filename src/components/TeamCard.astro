---
interface Props {
  firstName: string;
  lastName?: string;
  role: string;
  description: string;
  website?: URL;
  imageUrl: string;
}

const { firstName, lastName, role, description, website, imageUrl } = Astro.props;
const name = `${firstName} ${lastName ? lastName.toUpperCase() : ''}`.trim();
---

<style>
  img,
  img::before {
    @apply h-32 w-32 object-cover rounded-full;
  }

  img::before {
    @apply absolute block content-[''] bg-[url('/fallback.jpg')] bg-cover;
  }
</style>

<div class="flex flex-col space-x-0 space-y-2 md:flex-row md:space-y-0 md:space-x-6">
  <img alt={name} src={`/team/${imageUrl}`} />
  <div>
    <h3>{name}</h3>
    <p class="text-sm text-gray-300">{role}</p>
    <p class="my-4">{description}</p>
    {
      website && (
        <a class="btn text-xs" href={website} target="_blank" rel="noreferrer noopener">
          Website
        </a>
      )
    }
  </div>
</div>
