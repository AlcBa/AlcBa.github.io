---
import { Image } from 'astro:assets';
import LinkButton from './LinkButton.astro';

interface Props {
  name: string;
  role: string;
  description?: string;
  website?: URL;
  imageUrl: string;
}

const { name, role, description, website, imageUrl } = Astro.props;
---

<div class="flex flex-col space-x-0 space-y-2 sm:flex-row sm:space-y-0 sm:space-x-6">
  <Image
    width="160px"
    height="160px"
    alt={name}
    src={`/team/${imageUrl}`}
    class="h-40 w-40 min-w-40 aspect-square rounded-full"
  />
  <div>
    <h3>{name}</h3>
    <p class="text-sm text-gray-300">{role}</p>
    <p class="my-4">{description}</p>
    {website && <LinkButton label="Website" link={website} opensNewTab={true} />}
  </div>
</div>
