---
import '@fontsource-variable/karla';
---

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  h1 {
    @apply text-[2.875rem] font-light;
  }

  h2 {
    @apply font-semibold text-xl;
  }

  h3 {
    @apply font-semibold;
  }

  .card {
    @apply py-4 border-b last:border-none border-gray-400;
  }

  .link {
    @apply text-blue-300 hover:text-blue-400;
  }

  .btn {
    @apply py-1 px-2 text-blue-300 border border-blue-300 rounded-md hover:text-blue-400 hover:border-blue-400;
  }
</style>
