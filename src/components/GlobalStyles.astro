---
import '@fontsource-variable/open-sans';
---

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  h1 {
    @apply font-bold text-3xl;
  }

  h2 {
    @apply font-semibold text-xl;
  }

  h3 {
    @apply font-semibold;
  }

  .card {
    @apply p-4 bg-white rounded-md border border-gray-400;
  }

  .link {
    @apply text-blue-300 hover:text-blue-400;
  }
</style>
